<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEADFF8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainfragment.MenuFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolnar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/halal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/scan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nazad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Меню"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="81dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_menu"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        app:shapeAppearanceOverlay="@style/circular"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="206dp"
        android:layout_height="26dp"
        android:text="@string/AkylbekuKubanysh"
        android:layout_marginTop="115dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:gravity="top"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="347dp"
            android:layout_height="40dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="232dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_adam"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_menu_adam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/LishnyeKabinet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LishnyyKabinet"
                android:textSize="15dp"
                android:textColor="#0A8791"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="normal"
                android:layout_marginStart="69dp"/>

            <ImageView
                android:id="@+id/vector"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_marginStart="290dp"
                android:src="@drawable/ic_vector__1_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="282dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/vector_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/vse_vector"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="22dp"
            android:src="@drawable/img_a"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/img_d"/>

        <TextView
            android:id="@+id/Cobytie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Sobytie"
            android:textSize="15dp"
            android:textColor="#0A8791"
            android:textStyle="normal"
            android:layout_marginStart="69dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/vectorCobytie"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_vector__1_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="290dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="332dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/voprosy_i_otvety"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/voprosy_i_otvety"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:id="@+id/voprosy_i_otvety_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#0A8791"
            android:text="Вопросы и ответы"
            android:textStyle="normal"
            android:layout_marginStart="69dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/voprosy_i_otvety_tex"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_vector__1_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="290dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="382dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ob_organe"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ob_organe"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:id="@+id/ob_organe_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Об органе по сертификации халяль"
            android:textColor="#0A8791"
            android:textStyle="normal"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="60dp"/>

        <ImageView
            android:id="@+id/ob_organe_certification_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_vector__1_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="290dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="347dp"
    android:layout_height="40dp"
    android:background="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="432dp"
    app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/o_prilojenii_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:id="@+id/o_prilojenii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="О приложении"
            android:textColor="#0A8791"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="69dp"/>

        <ImageView
            android:id="@+id/o_prilojenii_icon_vector"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_vector__1_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="290dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

